<div class="card mb-20">
  <div class="card-body">
    <div class="row">
      <div class="col">
        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="expandAll">
          <label class="form-check-label" for="expandAll">Expand all</label>
        </div>

        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="showForeignId" checked>
          <label class="form-check-label" for="showForeignId">Show foreign id</label>
        </div>

        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="showAll">
          <label class="form-check-label" for="showAll">Show id, created_at, updated_at</label>
        </div>
      </div>
    </div>
  </div>
</div>

<% @models.each do |model| %>
  <div class="row">
    <div class="col">
      <%= render 'table', model: model %>
    </div>
  </div>
<% end %>
