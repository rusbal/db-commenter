<div class="comment">
  <% if true %>
    <span class="no-comment">Click to enter comment for <strong><%= table %>.<%= column %></strong></span>
  <% else %>
    <span class="with-comment"></span>
  <% end %>

  <%= form_with url: commenter_index_path, method: "post", html: { style: "display: none" } do |f| %>
    <%= f.hidden_field :table, id: "table-#{table}-#{column}", value: table %>
    <%= f.hidden_field :column, id: "column-#{table}-#{column}", value: column %>

    <div class="input-group">
      <%= f.text_area :comment, id: "comment-#{table}-#{column}", class: "form-control", required: true, autocomplete: 'off' %>
    </div>
  <% end %>
</div>
